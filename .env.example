# AegisGate Configuration

# Application
APP_NAME="AegisGate AI Firewall"
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server
PORT=8000
HOST=0.0.0.0

# Upstream Service (The API we are protecting)
UPSTREAM_URL=http://localhost:8080

# Redis (Cache & Rate Limiting)
REDIS_URL=redis://localhost:6379/0

# Security
ADMIN_API_KEY=change_this_to_a_secure_random_key_in_production
JWT_SECRET=super_secret_jwt_key

# AI Configuration
# Enable/Disable modules for performance tuning
ENABLE_EMBEDDINGS=true
ENABLE_ANOMALY_DETECTION=true
